{% extends 'RCSDataBundle::base.html.twig' %}

{% block content %}
    <h1>Site edit</h1>

    <form action="{{ path('site_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="{{ path('site') }}" class="btn">
                Cancel
            </a>
        </p>
    </form>

        <form action="{{ path('site_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger"><span class="icon-white icon-trash"></span> Delete</button>
        </form>

{% endblock %}
