{% extends 'RCSDataBundle::base.html.twig' %}

{% block content %}
    <h1>Report Data</h1>

    <p><a href="{{ path('report_new') }}" class="btn"><span class="icon-plus"></span> New Report</a></p>

    <table class="striped">
        <thead>
            <tr>
                <th></th>
                <th>Lat, Lng</th>
                <th>Timestamp</th>
                <th>Participants</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('report_edit', { 'id': entity.id }) }}"><span class="icon-pencil"></span></a></td>
                <td>{% if entity.latitude and entity.longitude %}{{ entity.latitude|number_format(2) }}, {{ entity.longitude|number_format(2) }}{% endif %}</td>
                <td>{% if entity.timestamp %}{{ entity.timestamp|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.participants }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
